<h1>Your Addresses</h1>
<p><%= link_to 'Add address', new_account_address_path(current_account) %></p>

<ul>
    <% @addresses.each do |address| %>
        <li>
            <%= link_to account_address_path(current_account, address) do %>
                <%= address.country_label %> | 
                <%= address.state_label %> | 
                <%= address.city %>
            <% end %>
        </li>
    <% end %>
</ul>